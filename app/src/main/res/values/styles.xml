<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <declare-styleable name="MyExpannableLayout">
        <attr name="num2show" format="integer"/>
        <attr name="toshowWord" format="string"/>
        <attr name="tohideWord" format="string"/>
    </declare-styleable>


    <!--圆形播放器-->
    <declare-styleable name="ButtonCircleProgressBar">

        <!--无进度时的颜色-->
        <attr name="progress_unreached_color" format="color" />
        <!--进度颜色-->
        <attr name="progress_reached_color" format="color" />
        <!--进度条的高-->
        <attr name="progress_reached_bar_height" format="dimension" />
        <!--无进度时的边框高-->
        <attr name="progress_unreached_bar_height" format="dimension" />
        <!--圆的半径-->
        <attr name="radius" format="dimension" />
    </declare-styleable>

    <!--横向百分比进度条-->

    <!--自定义banner-->
    <declare-styleable name="MyBanner">
        <!--选中时的图标-->
        <attr name="selected_icon" format="reference" />
        <!--未选中时的图标-->
        <attr name="unselected_icon" format="reference" />
        <!--图标的宽度-->
        <attr name="indicatorSize" format="integer" />
        <!--banner切换时的速度-->
        <attr name="scroll_duration" format="integer"/>
        <!--indicator显示类型-->
        <attr name="indicator_style" format="enum">
            <enum name="image" value="0"/>
            <enum name="num" value="1"/>
        </attr>
        <!--banner每页停留时间-->
        <attr name="delaytime" format="integer"/>
    </declare-styleable>

    <style name="AppTheme.NoActionBar">
        <!-- 隐藏标题栏 -->
        <item name="windowNoTitle">true</item>
        <!-- 隐藏状态栏 -->
        <!--<item name="android:windowFullscreen">false</item>-->
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/diy_finish_blue</item>
    </style>

    <style name="AppTheme.Customer" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>

        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--Toolbar颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--返回键样式-->

        <!--Button按钮正常状态颜色-->
        <!--<item name="colorButtonNormal">@color/colorAccent</item>-->
        <!--EditText 输入框中字体的颜色-->
        <!--<item name="editTextColor">@android:color/white</item>-->
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@color/bg_layout</item>
    </style>


    <!--进入、退出动画-->
    <style name="anim_menu_bottombar">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>

    <!--tablayout-->
    <declare-styleable name="MyTabLayout">
        <attr name="itemSize" format="integer"/>
        <attr name="color_selected" format="color" />
        <attr name="color_unselected" format="color" />
        <attr name="bottomLineIndicatorWidth" format="dimension" />
    </declare-styleable>
</resources>
